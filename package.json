{
  "name": "wadsworth",
  "version": "0.2.0",
  "description": "Easily serve plain JS scripts to the browser with auto-generated HTML.",
  "main": "index.js",
  "bin": {
    "wadsworth": "bin/wadsworth"
  },
  "scripts": {
    "lint": "eslint *.js \"static/**/*.js\" \"test/**/*.js\" bin/wadsworth",
    "test": "tap test/index.js",
    "test:ci": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/w33ble/wadsworth"
  },
  "keywords": [
    "browser",
    "server",
    "static server",
    "run",
    "script"
  ],
  "authors": [
    "Conrad Zimmerman <me@conradz.com>",
    "Joe Fleming (https://github.com/w33ble)"
  ],
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/w33ble/wadsworth/issues"
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.1.0",
    "express": "~3.3.8",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.9.0",
    "request": "^2.85.0",
    "tap": "~0.4.4",
    "through": "~2.3.4"
  },
  "dependencies": {
    "mri": "^1.1.0"
  }
}
